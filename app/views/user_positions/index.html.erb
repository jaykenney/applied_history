<% cache positions do %>
  <h2>Positions</h2>
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Employer</th>
            <th>Status</th>
            <th>Last Update</th>
          </tr>
        </thead>
        <tbody>
          <% positions.each do |position| %>
            <tr>
              <td><%= position.employer %></td>
              <td><%= position.status.titleize %></td>
              <td><%= position.updated_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
